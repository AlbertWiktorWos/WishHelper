{% set css %}
    {% for file in encore_entry_css_files('email') %}
        {{ source('@public/' ~ file) }}
    {% endfor %}
{% endset %}

{% apply inline_css(css) %}
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Email{% endblock %}</title>
    </head>
    <body>

    <table width="100%" class="email-wrapper" cellpadding="0" cellspacing="0">
        <tr>
            <td align="center">

                <table class="email-card" cellpadding="0" cellspacing="0">

                    <tr>
                        <td class="email-header">
                            <img
                                    src="{{ absolute_url(asset('build/images/logo.png')) }}"
                                    alt="Logo"
                                    width="100"
                            >
                        </td>
                    </tr>

                    <tr>
                        <td class="email-body">
                            {% block body %}{% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td class="email-footer">
                            Â© {{ "now"|date("Y") }} WishHelper
                        </td>
                    </tr>

                </table>

            </td>
        </tr>
    </table>

    </body>
    </html>
{% endapply %}
